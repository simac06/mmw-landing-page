---
const { data } = Astro.props;
import PresaveDialog from "./PresaveDialog.astro";
---

<PresaveDialog presaveUrls={data.presaveUrls} />
<div
  class="flex flex-col font-display items-center bg-bg w-full rounded-xl border-[0.75px] lg:border-2 p-3 lg:p-4 lg:gap-4 border-gray gap-3 relative"
>
  <div class="flex w-full text-white text-2xl lg:text-2xl">
    <span>Presave Now</span>
  </div>
  <div class="w-full flex gap-4">
    <div class="aspect-square h-28 lg:h-32">
      <img class="rounded-md" src={data.image.src} alt="" />
    </div>

    <div class="flex flex-col text-[#e8ddd3] w-full">
      <span class="title text-xl lg:text-2xl">{data.title}</span>
      <span class="font-normal text-md lg:text-lg">{data.releaseDate}</span>
    </div>
  </div>
  <button
    id="presaveBtn"
    class="flex flex-col items-center justify-center px-4 py-2 bg-blue text-white rounded-xl absolute bottom-0 right-0 m-3"
  >
    <span class="text-[0.75rem] lg:text-lg text-black">PRESAVE</span>
  </button>
</div>
