---
import DynamicText from "./ui/DynamicText.astro";
import Marquee from "./ui/Marquee.jsx";

const photos = ["efab28a1-06a6-430f-9418-9adb7bfb8013"];

const variables = `/-/scale_crop/720x1080/smart/`;
---

<section class="flex flex-col items-center">
  <div
    class="flex flex-col w-full h-full items-center font-satoshi text-[#e8ddd3] gap-4"
  >
    <div class="w-full font-black">
      <Marquee content="Artists / " client:load />
    </div>
    <div class="w-full grid grid-cols-2 px-2 gap-3">
      <div class="relative flex rounded">
        <div
          class="bg-[rgb(0,0,0,0.3)] absolute w-full h-full flex items-end p-2"
        >
          <span class="text-2xl font-bold drop-shadow-sm">DRAGO</span>
        </div>
        <img
          src="https://ucarecdn.com/aa177329-baf8-40c5-8a70-bc42957a5f1c/-/scale_crop/720x900/center/"
          class="object-cover rounded"
        />
      </div>
      <div class="relative flex rounded">
        <div
          class="bg-[rgb(0,0,0,0.2)] absolute w-full h-full flex items-end p-2"
        >
          <span class="text-2xl font-bold">APOSTOLI</span>
        </div>
        <img
          src="https://ucarecdn.com/8c647619-b682-4904-9564-b3f29304911b/-/scale_crop/720x900/center/"
          class="object-cover rounded"
        />
      </div>
      <div class="relative flex rounded">
        <div
          class="bg-[rgb(0,0,0,0.2)] absolute w-full h-full flex items-end p-2"
        >
          <span class="text-2xl font-bold">APOSTOLI</span>
        </div>
        <img
          src="https://ucarecdn.com/8c647619-b682-4904-9564-b3f29304911b/-/scale_crop/720x900/center/"
          class="object-cover rounded"
        />
      </div>
    </div>
  </div>
</section>
