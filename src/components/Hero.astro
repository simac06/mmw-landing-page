---
import Marquee from "./ui/Marquee.astro";
import HeroImages from "./ui/HeroImages.astro";

const photos = [
  "8c647619-b682-4904-9564-b3f29304911b",
  "3578904b-9b36-4632-8501-f9fa04146e12",
  "efab28a1-06a6-430f-9418-9adb7bfb8013",
  "ca33b197-b310-4a0e-b304-cd6be5b101de",
  "57054ff0-e63c-49f8-8e6a-9ad74df87701",
  "6e1092d9-042c-46dd-88f1-aaa96db0e44e",
  "594f8202-d83d-4296-8483-a8adc3134535",
  "52578b44-ffce-4c4a-b08f-83ea8c795212",
  "025b7a1a-859a-44a7-ac8d-d61286efbdcc",
];

const variables = `/-/scale_crop/1080x720/smart/-/grayscale/`;
---

<section class="w-screen h-full bg-[#000000] relative">
  <!-- <div
    class="z-50 w-full overflow-hidden text-white font-display font-black absolute h-10"
  >
    <Marquee size="5xl" text="MusicsMostWanted.com" />
  </div> -->

  <!-- add overflow-hidden to below div -->

  <div class="animate-loop-scroll w-full h-full overflow-hidden">
    <div
      class="w-full h-full absolute bg-contain mix-blend-screen z-50 opacity-40 bg-[url('../../images/grain.jpg')]"
    >
    </div>
    <div class="w-full h-full absolute bg-gray-500 opacity-15 z-40"></div>
    <div class="flex flex-col gap-8 w-full h-full [&>*]:rounded-md pb-4">
      {
        photos.map((source) => (
          <HeroImages source={source} variables={variables} />
        ))
      }
    </div>
  </div>

  <div class="animate-loop-scroll w-full h-full" aria-hidden="true">
    <div
      class="w-full h-full absolute bg-contain mix-blend-screen z-50 opacity-40 bg-[url('../../images/grain.jpg')]"
    >
    </div>
    <div class="w-full h-full absolute bg-gray-500 opacity-15 z-40"></div>
    <div class="flex flex-col gap-8 w-full h-full [&>*]:rounded-md pt-4">
      {
        photos.map((source) => (
          <HeroImages source={source} variables={variables} />
        ))
      }
    </div>
  </div>
</section>
