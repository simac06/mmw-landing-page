---
const { source, variables } = Astro.props;
import { Image } from "astro:assets";

import texture from "../../images/dust-scratches.jpg";
---

<div class="h-min flex relative">
  <div
    class="absolute h-full w-full z-30 top-0 bottom-0 mix-blend-screen opacity-50"
  >
    <Image src={texture} alt="texture" class="w-full h-full" />
  </div>
  <div class="w-2 h-full bg-bg"></div>

  <div class="font-display text-[orange] relative text-xs">
    <div class="h-11 bg-bg px-2 pb-1 flex flex-col relative justify-end">
      <div class="w-full flex h-1/2 items-end justify-end">
        <div class="w-1/2 h-full pl-6 flex pt-1 leading-none">MMW</div>
      </div>
      <div class="flex w-full h-1/2 justify-between z-40">
        <div class="w-4 bg-gray rounded-md"></div>
        <div class="w-4 bg-gray rounded-md"></div>
        <div class="w-4 bg-gray rounded-md"></div>
        <div class="w-4 bg-gray rounded-md"></div>
        <div class="w-4 bg-gray rounded-md"></div>
        <div class="w-4 bg-gray rounded-md"></div>
        <div class="w-4 bg-gray rounded-md"></div>
        <div class="w-4 bg-gray rounded-md"></div>
      </div>
    </div>
    <div class="flex w-screen">
      <div class="w-2 bg-bg"></div>
      <div class="aspect-[3/2] relative">
        <div class="w-full h-full absolute bg-bg mix-blend-lighten"></div>
        <img
          class="object-cover"
          src=`https://ucarecdn.com/${source}${variables}`
        />
      </div>
    </div>

    <div class="h-11 bg-bg px-2 pt-1 flex flex-col relative justify-start">
      <div class="flex w-full h-1/2 justify-between z-40">
        <div class="w-4 bg-gray rounded-md"></div>
        <div class="w-4 bg-gray rounded-md"></div>
        <div class="w-4 bg-gray rounded-md"></div>
        <div class="w-4 bg-gray rounded-md"></div>
        <div class="w-4 bg-gray rounded-md"></div>
        <div class="w-4 bg-gray rounded-md"></div>
        <div class="w-4 bg-gray rounded-md"></div>
        <div class="w-4 bg-gray rounded-md"></div>
      </div>

      <div class="w-full flex h-1/2 items-end justify-end">
        <div class="w-1/2 h-full pl-6 flex items-end leading-none">MMW</div>
        <div
          class="bg-gray rounded-tl-full rounded-tr-full absolute z-40 left-1/2 translate-x-[-50%] w-10 h-5"
        >
        </div>
      </div>
    </div>
  </div>

  <div class="w-2 h-full bg-bg"></div>
</div>
